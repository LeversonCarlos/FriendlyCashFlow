{
   "AppSettings": {
      "BaseHost": "https://www.your-domain.net",
      "ConnStr": "Data Source=(LocalDb)\\mssqllocaldb;Initial Catalog=FriendlyCashFlow;Integrated Security=SSPI;AttachDBFilename=D:\\Sources\\FriendlyCashFlow\\data\\FriendlyCashFlow.mdf",
      "Passwords": {
         "PasswordSalt": "MyPasswordSalt",
         "RequireUpperCases": false,
         "RequireLowerCases": true,
         "RequireNumbers": false,
         "RequireSymbols": false,
         "MinimumSize": 7
      },
      "Token": {
         "Secret": "My_Lengthy_Token_Secret",
         "Issuer": "MyTokenIssuer",
         "Audience": "MyTokenAudience",
         "AccessExpirationInSeconds": 180,
         "RefreshExpirationInSeconds": 259200
      },
      "Mail": {
         "SmtpHost": "smtp.email.com.br",
         "SmtpPort": 587,
         "FromName": "Cash Flow",
         "FromAddress": "name@email.com.br",
         "FromPassword": "*******"
      },
      "AppInsights": {
         "Activated": false,
         "InstrumentationKey": "{fill up with the instrumentationKey from application insights on azure}",
         "GlobalProperties": {
            "SomeKey": "SomeValue",
            "Environment": "DEV"
         }
      }
   },
   "Logging": {
      "LogLevel": {
         "Default": "Warning"
      }
   },
   "AllowedHosts": "*"
}
