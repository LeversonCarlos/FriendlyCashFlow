@model FriendCash.Model.Account
@{
   ViewBag.jQueryUI = true;
   Layout = "~/Views/Shared/Base.cshtml";
}

@if (Model != null)
{
   using (Html.BeginForm("Edit", "Accounts", FormMethod.Post)) 
   {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true)
      @Html.HiddenFor(model => model.idRow)
      @Html.HiddenFor(model => model.idAccount)

      <div class="panel panel-default">
         <div class="panel-body">
            @Html.FriendTextBoxFor(model => model.Code, (Model.idAccount==0))
            @Html.FriendTextBoxFor(model => model.Description)
            @Html.FriendDropDownListFor(model => model.Type, typeof(FriendCash.Model.Account.enType))
            @Html.FriendTextBoxFor(model => model.DueDay)
            @Html.FriendDropDownListFor(model => model.Status, typeof(FriendCash.Model.Account.enStatus))
         </div>
         <div class="panel-footer">
            <div class="row">
               @{
                  CommandRemove oRemove = null;
                  if (Model.idAccount > 0) 
                  { oRemove = new CommandRemove(); oRemove.Question = FriendCash.Resources.Accounts.MSG_QUESTION_REMOVE; }
               }
               @Html.FriendCommandForEdit(new CommandSave(), oRemove)
            </div>
         </div>
      </div>
   }
}