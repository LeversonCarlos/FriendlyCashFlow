@model ICollection<Microsoft.AspNet.Identity.UserLoginInfo>
@if (Model.Count > 0) 
{
   <div class="panel panel-default">
      <div class="panel-heading">
         <h3>@FriendCash.Resources.User.TITLE_SERVICE_LOGIN</h3>
      </div>
      <div class="panel-body">
         @foreach (var externalLogin in Model)
         {
            <div class="alert alert-success alert-dismissable btn-social btn-social-@externalLogin.LoginProvider.ToLower()">
               @if (ViewBag.ShowRemoveButton) 
               {
                  using (Html.BeginForm("ServiceDisassociate", "User")) 
                  {
                     @Html.AntiForgeryToken()
                     @Html.Hidden("loginProvider", externalLogin.LoginProvider)
                     @Html.Hidden("providerKey", externalLogin.ProviderKey)
                     <button type="submit" class="close" style="color:#fff"
                        title="@string.Format(FriendCash.Resources.User.MSG_INFO_REMOVE_SERVICE_LOGIN_TOOLTIP, externalLogin.LoginProvider)">&times;</button>
                  }
               }
               <div class="text-center">@externalLogin.LoginProvider</div>
            </div>
         }
      </div>
   </div>
}
