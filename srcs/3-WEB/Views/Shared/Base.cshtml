<!DOCTYPE html>

<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">

<head>
   <meta charset="utf-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1" />
   <title>FriendCash :: @ViewBag.PageTitle</title>

   <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
   @Scripts.Render("~/bundles/jquery")
   @*if (ViewBag.jQueryUI == true) { @Styles.Render("~/Content/jQueryCss/files") } *@
   @Styles.Render("~/Content/bootstrap/css")
   @Styles.Render("~/Content/themeCss/files")
   @RenderSection("Head", required: false)

   <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
      <!--[if lt IE 9]>
      <script src='@Url.Content("~/Scripts/ie/html5shiv.js")' type="text/javascript"></script>
      <script src='@Url.Content("~/Scripts/ie/respond.min.js")' type="text/javascript"></script>        
   <![endif]-->
</head>

<body>

   <header>
      <div class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
         <div class="container">
            <div class="navbar-header">
               @Html.Partial("Base_Toggle")
               <a href="@Url.Action("Index", "Home")" title="@FriendCash.Resources.Home.PAGE_TITLE">
                  <div class="navbar-brand"></div>
               </a>
               <span class="navbar-title visible-xs"><span>@ViewBag.PageTitle<small> @ViewBag.PageSubTitle</small></span></span>
            </div>
            <div class="collapse navbar-collapse">
               <ul class="nav navbar-nav">
                  @Html.Partial("Base_Menu")
                  @RenderSection("LeftMenu", required: false)
               </ul>
               <span class="navbar-title hidden-xs"><span>@ViewBag.PageTitle<small> @ViewBag.PageSubTitle</small></span></span>
               <ul class="nav navbar-nav navbar-right">
                  @RenderSection("RightMenu", required: false)
                  @Html.Partial("Base_User")
               </ul>
               @Html.Partial("Base_Search")
            </div><!--/.nav-collapse -->
         </div>
      </div>
   </header>

   <section>
      <div class="container">
         <div class="row h2">
            <div class="col-xs-9 nowrap">
               @RenderSection("TitleLeft", required: false)
            </div>
            <div class="col-xs-3 text-right">
               @RenderSection("TitleRight", required: false)
            </div>
         </div>
         @RenderBody()
      </div>
   </section>

   <footer>
      @Html.Partial("Base_Footer")
      @if (ViewBag.jQueryUI == true)
      { 
         @Scripts.Render("~/bundles/jqueryui"); 
         @Scripts.Render("~/bundles/jquerymask"); 
         <script src="@Url.Content(URLs.GlobalizeCulture)" type="text/javascript"></script>
         @Html.Partial("Base_Masks")
      }
      @Scripts.Render("~/bundles/bootstrap")
      @RenderSection("Scripts", required: false)
   </footer>

</body>

</html>
