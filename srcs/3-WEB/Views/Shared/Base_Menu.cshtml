      <li role="presentation">@Html.ActionLink(FriendCash.Resources.Document.ENUM_TYPE_EXPENSE, "New", "Expenses", new { }, new { @role="menuitem", @tabindex="-1" })</li>
      <li role="presentation">@Html.ActionLink(FriendCash.Resources.Transfer.PAGE_TITLE, "New", "Transfers", new { }, new { @role="menuitem", @tabindex="-1" })</li>
   </ul>
</li>
