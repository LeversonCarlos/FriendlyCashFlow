<li class="dropdown">
   <a href="#" id="menuParameters" role="button" class="dropdown-toggle" data-toggle="dropdown">
      <span class="glyphicon glyphicon-cog"></span>
      <span> </span>
      <span>@FriendCash.Resources.Base.PARAMETERS</span><b class="caret"></b>
   </a>
   <ul class="dropdown-menu" role="menu" aria-labelledby="menuParameters">
      <li role="presentation">@Html.ActionLink(FriendCash.Resources.Accounts.PAGE_TITLE, "Index", "Accounts", new { page = new Int16?(), search = string.Empty }, new { @role="menuitem", @tabindex="-1" })</li>
      <li role="presentation">@Html.ActionLink(FriendCash.Resources.Suppliers.PAGE_TITLE, "Index", "Suppliers", new { page = new Int16?(), search = string.Empty }, new { @role="menuitem", @tabindex="-1" })</li>
      <li role="presentation">@Html.ActionLink(FriendCash.Resources.Planning.PAGE_TITLE, "Index", "Planning", new { page = new Int16?(), search = string.Empty }, new { @role="menuitem", @tabindex="-1" })</li>
      @if (System.Configuration.ConfigurationManager.AppSettings["BetaFunctions"] == "1")
      {
         <li role="presentation">@Html.ActionLink(FriendCash.Resources.Recurrent.PAGE_TITLE, "Index", "Recurrent", new { page = new Int16?(), search = string.Empty }, new { @role="menuitem", @tabindex="-1" })</li>
      }
   </ul>
</li>

<li class="dropdown create-new">
   <a href="#" id="menuAdd" role="button" class="dropdown-toggle" data-toggle="dropdown">
      <span class="hidden-xs glyphicon glyphicon-plus-sign"></span>
