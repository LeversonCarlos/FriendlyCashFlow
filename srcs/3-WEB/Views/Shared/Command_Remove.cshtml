@model CommandRemove
@{
   var oBASE = new List<CommandBase>(); oBASE.Add(Model);
   var oVIEW = 
      (from BASE in oBASE
         select new
         {
         Name = "RemoveConfirm", 
         Icon = BASE.GetIcon(), 
         Color = BASE.Color.ToString().ToLower(),
         Text = BASE.Text
         }).SingleOrDefault();
   }
@Html.Partial("Command_Base", Model)
<script type="text/javascript">

   $('#RemoveButton').click(function (e) {
      var confirmTitle = "[CONFIRM]";
      var confirmQuestion = "@(new HtmlString(Model.Question))";
      var confirmButton = @(new HtmlString(Json.Encode(oVIEW)));
      ShowModal("RemoveModal", confirmTitle, confirmQuestion, "", confirmButton); 

      $('#RemoveConfirm').on('click', function () {
         $('#RemoveModal').modal('hide');
         var formAction = '@(string.IsNullOrEmpty(Model.Action) ? Url.Action("Remove") : Model.Action)';
         var formName = $('.SaveButtonHooked').attr("data-form-name");
         var formObject = $("#" + formName);
         if (formName == undefined) { formObject = $("#RemoveButton").closest("form"); };
         var formData = formObject.serialize();
         FormPost(formAction, formData);
      });

   });

</script>
