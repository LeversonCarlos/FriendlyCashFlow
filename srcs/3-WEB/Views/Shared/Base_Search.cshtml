@if (ViewBag.SearchModel != null)
{
   var Model = ((FriendCash.Web.Search)ViewBag.SearchModel);
   <div class="col-md-3 col-sm-2">
      @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "col-sm-3 navbar-form navbar-right", @role = "search" }))
      { 
         @Html.AntiForgeryToken()
      <div class="input-group">

         <!-- SETTLED -->
         @Html.HiddenFor(model => Model.UseSettled)
         @if (Model.UseSettled == true) 
         { 
            <div class="input-group-btn">
            <span data-toggle="buttons" title="Settled">
               <label class="btn btn-default @(Model.ValueSettled == true ? "active" : "")" >
                  <input id="ValueSettled" name="ValueSettled" type="checkbox" 
                     value="true" @(Model.ValueSettled == true ? "checked='checked' " : "") />
                  <span class="glyphicon glyphicon-check"></span>
                  <!-- <span class="visible-xs">Settled</span> -->
               </label>
               <input name="ValueSettled" type='hidden' value="false" />
            </span>
               </div>
          }
       
         <!-- SEARCH --> 
         @Html.TextBoxFor(model => Model.ValueSearch, new { @class = "form-control", @placeholder="Search" })
         <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
               <i class="glyphicon glyphicon-search"></i>
               <!-- <span class="visible-xs">Search</span> -->
            </button>
         </div>
      </div>
      }
   </div>
}