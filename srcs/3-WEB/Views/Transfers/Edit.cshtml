@model FriendCash.Model.Transfer
@{
   ViewBag.jQueryUI = true;
   Layout = "~/Views/Shared/Base.cshtml";
}

@if (Model != null)
{
   using (Html.BeginForm("Edit", "Transfers", FormMethod.Post)) 
   {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true)
      @Html.HiddenFor(model => model.idRowIncome)
      @Html.HiddenFor(model => model.idRowExpense)
      @Html.HiddenFor(model => model.idTransfer)
      @Html.HiddenFor(model => model.DueDate)
      @Html.HiddenFor(model => model.idDocument)
      @Html.HiddenFor(model => model.Settled)

      <div class="panel panel-default">
         <div class="panel-body">
            @Html.FriendTextBoxFor(model => model.Value)
            @Html.FriendTextBoxFor(model => model.PayDate)
            @Html.FriendAutoCompleteFor(model => model.idAccountExpense, new AutoCompleteAccount(Model.AccountExpenseDetails))
            @Html.FriendAutoCompleteFor(model => model.idAccountIncome, new AutoCompleteAccount(Model.AccountIncomeDetails))
         </div>
         <div class="panel-footer">
            <div class="row">
               @{
                  CommandRemove oRemove = null;
                  if (Model.idTransfer > 0)
                  { oRemove = new CommandRemove(); oRemove.Question = FriendCash.Resources.Transfer.MSG_QUESTION_REMOVE; }
               }
               @Html.FriendCommandForEdit(new CommandSave(), oRemove)
            </div>
         </div>
      </div>
   }
}
