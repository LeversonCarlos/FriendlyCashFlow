@model IEnumerable<FriendCash.Model.Transfer>
@{
   Layout = "~/Views/Shared/Base.cshtml";
   //ViewBag.SearchModel = new FriendCash.Web.Search() { Value = ViewData["Search"].ToString() };
   ViewBag.cssDueDate = "col-xs-6  col-sm-3 text-center";
   ViewBag.cssValue   = "col-xs-6  col-sm-3 text-right";
   ViewBag.cssAccount = "hidden-xs col-sm-3";
}
@section TitleRight { @Html.FriendCommandForCreate() }

<div class="panel panel-default">
   <table class="table table-hover">
      <thead>
         <tr>
            <th class="@ViewBag.cssDueDate">@FriendCash.Resources.Transfer.COLUMN_PAY_DATE</th>
            <th class="@ViewBag.cssValue">@FriendCash.Resources.Transfer.COLUMN_VALUE</th>
            <th class="@ViewBag.cssAccount">@FriendCash.Resources.Transfer.COLUMN_ACCOUNT_EXPENSE</th>
            <th class="@ViewBag.cssAccount">@FriendCash.Resources.Transfer.COLUMN_ACCOUNT_INCOME</th>
         </tr>
      </thead>
      <tbody>
         @if (Model != null)
         {
            foreach (var oItem in Model)
            {
               <tr>
                  <td class="@ViewBag.cssDueDate">
                     <a href="@Url.Action("Edit", "Transfers", new {id=oItem.idTransfer})">@string.Format("{0:d}", oItem.PayDate)</a>
                  </td>
                  <td class="@ViewBag.cssValue">@string.Format("{0:c2}", oItem.Value)</td>
                  <td class="@ViewBag.cssAccount">@(oItem.Settled==true && oItem.AccountExpenseDetails != null ? oItem.AccountExpenseDetails.Description:"")</td>
                  <td class="@ViewBag.cssAccount">@(oItem.Settled==true && oItem.AccountIncomeDetails != null ? oItem.AccountIncomeDetails.Description:"")</td>
               </tr>
             }
          }
      </tbody>
   </table>
</div>
@Html.Partial("Pagination")
