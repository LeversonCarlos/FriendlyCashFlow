{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@elesse/shared": [
        "projects/elesse-shared/src/public-api.ts"
      ],
      "@elesse/identity": [
        "projects/elesse-identity/src/public-api.ts",
      ]
    }
  }
}
