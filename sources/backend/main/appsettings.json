{
  "Frontend": {
    "Url": "http://localhost:4200"
  },
  "Mongo": {
    "ConnStr": "mongodb://username:password@server:port",
    "Database": "databaseName"
  },
  "Identity": {
    "PasswordSalt": "some-salt-for-the-hash-algorithm",
    "PasswordRules": {
      "MinimumUpperCases": 0,
      "MinimumLowerCases": 0,
      "MinimumNumbers": 0,
      "MinimumSymbols": 0,
      "MinimumSize": 0
    },
    "Token": {
      "SecuritySecret": "some-secret-for-the-token-security-key",
      "Issuer": "my-issuer",
      "Audience": "my-audience",
      "AccessExpirationInSeconds": 60,
      "RefreshExpirationInSeconds": 3600
    }
  },
  "AppInsights": {
    "Activated": false,
    "Key": "{fill up with the instrumentationKey from application insights on azure}",
    "GlobalProperties": {
      "Service": "Backend",
      "Environment": "DEV"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
